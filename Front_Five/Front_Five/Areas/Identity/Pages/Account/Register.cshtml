@page
@model FiveMotors.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body.cadastro {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: url('/img/cadastro01.png') no-repeat center right;
        background-size: cover;
        background-color: #000;
        min-height: 100vh;
    }

    #registerForm {
        background: #fff;
        padding: 40px 30px;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.3);
        width: 100%;
        max-width: 450px;
        margin: auto;
    }

        #registerForm h2 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
            color: #222;
        }

        #registerForm .form-control, #registerForm .form-select {
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 12px;
            margin-bottom: 15px;
            box-shadow: none;
        }

        #registerForm label {
            font-size: 14px;
            color: #555;
        }

    #registerSubmit {
        background: #111;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px;
        font-weight: bold;
        transition: 0.3s;
    }

        #registerSubmit:hover {
            background: #333;
            transform: scale(1.02);
        }

    .col-md-6 {
        display: none;
    }
</style>

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-4">
        <form id="registerForm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <h2>FiveMotors Club<br /><small>Tela de Cadastro</small></h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Nome" class="form-control" placeholder="Nome completo" />
                <label asp-for="Input.Nome">Nome completo</label>
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Senha" />
                <label asp-for="Input.Password">Senha</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmar senha" />
                <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Telefone" class="form-control" placeholder="Telefone" />
                <label asp-for="Input.Telefone">Telefone</label>
                <span asp-validation-for="Input.Telefone" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Endereco" class="form-control" placeholder="Endereço" />
                <label asp-for="Input.Endereco">Endereço</label>
                <span asp-validation-for="Input.Endereco" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.DataNascimento" type="date" class="form-control" />
                <label asp-for="Input.DataNascimento">Data de Nascimento</label>
                <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.CpfCnpj" type="form-control" class="form-control" />
                <label asp-for="Input.CpfCnpj">CPF OU CNPJ</label>
                <span asp-validation-for="Input.CpfCnpj" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.TipoPessoa" class="form-select">
                    <option value="">Selecione...</option>
                    <option value="Física">Pessoa Física</option>
                    <option value="Jurídica">Pessoa Jurídica</option>
                </select>
                <label asp-for="Input.TipoPessoa">Tipo de Pessoa</label>
                <span asp-validation-for="Input.TipoPessoa" class="text-danger"></span>
            </div>

            <button type="submit" id="registerSubmit" class="w-100 btn btn-lg">Cadastrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
