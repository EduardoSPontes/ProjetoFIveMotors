<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FiveMotors</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color: #fff;
        }

        main {
            flex: 1;
        }

        footer {
            background-color: #1f2a36;
            color: #d1d1d1;
            border-top: 3px solid #489891;
            padding: 40px 0 20px 0;
            font-size: 0.95rem;
        }

            footer h6 {
                color: #58c7ba;
                font-weight: 600;
                margin-bottom: 1rem;
            }

            footer a {
                color: #d1d1d1;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                footer a:hover {
                    color: #58c7ba;
                }

            footer i {
                color: #58c7ba;
                margin-right: 8px;
            }

            footer hr {
                border-color: #3a4a56;
                margin: 20px 0;
            }

            footer .dev-text {
                font-size: 0.85rem;
                color: #a0aab6;
            }

        .navbar-brand img {
            width: 70px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="img/Logo.png" alt="FiveMotors Logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-3 m-3 text-center">
                        <li class="nav-item"><a class="nav-link fw-semibold" style="color: #489891;" asp-controller="Home" asp-action="Index">Sobre</a></li>
                        <li class="nav-item"><a class="nav-link fw-semibold" style="color: #489891;" asp-controller="QuemSomos" asp-action="Index">Quem Somos</a></li>
                        <li class="nav-item"><a class="nav-link fw-semibold" style="color: #489891;" asp-controller="ProdutosServicos" asp-action="Index">Produtos e Serviços</a></li>
                        <li class="nav-item"><a class="nav-link fw-semibold" style="color: #489891;" asp-controller="Contato" asp-action="Index">Contato</a></li>
                        <li class="nav-item"><a class="nav-link fw-semibold" style="color: #489891;" asp-controller="Adm" asp-action="Index">Administração</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-4 mb-4">
                    <img src="img/Logo.png" alt="FiveMotors Logo" width="120" class="mb-3">
                    <p>FiveMotors © 2025</p>
                    <p>Todos os direitos reservados.</p>
                </div>

                <div class="col-md-4 mb-4">
                    <h6>Institucional</h6>
                    <p><a href="#"><i class="bi bi-info-circle"></i>Quem Somos</a></p>
                    <p><a href="#"><i class="bi bi-gear-fill"></i>Serviços</a></p>
                    <p><a href="#"><i class="bi bi-shield-lock"></i>Política de Privacidade</a></p>
                    <p><a href="#"><i class="bi bi-file-earmark-text"></i>Termos de Uso</a></p>
                </div>

                <div class="col-md-4 mb-4">
                    <h6>Fale Conosco</h6>
                    <p><i class="bi bi-geo-alt"></i>Av. Automotiva, 500 - São Paulo, SP</p>
                    <p><i class="bi bi-telephone"></i>(11) 99999-9999</p>
                    <p><i class="bi bi-envelope"></i><a href="mailto:contato@fivemotors.com">contato@fivemotors.com</a></p>
                </div>
            </div>

            <hr>
            <p class="text-center dev-text">
                Desenvolvido por <strong>FiveMotors Dev Team</strong>
            </p>
        </div>
    </footer>

    <a href="https://wa.me/5511999999999" target="_blank"
       class="btn btn-success position-fixed d-flex align-items-center gap-2"
       style="bottom: 18px; right: 20px; border-radius: 30px; font-size: 14px;">
        <i class="bi bi-whatsapp"></i> Fale conosco
    </a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
